{
  "name": "meteor-vite-repository",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/vite-bundler",
    "npm-packages/meteor-vite"
  ],
  "dependencies": {
    "@changesets/cli": "^2.26.2"
  },
  "devDependencies": {},
  "scripts": {
    "version:vite-bundler": "meteor node .bin/release-meteor-package.mjs version",
    "publish:vite-bundler": "meteor node .bin/release-meteor-package.mjs publish",

    "version": "npm run version:vite-bundler && changeset version",
    "release": "npm run publish:vite-bundler && changeset publish",

    "install:package": "cd npm-packages/meteor-vite && meteor npm install",
    "install:vue": ".bin/example-app.sh install vue",
    "install:vue-ssr": ".bin/example-app.sh install vue-ssr",
    "install:svelte": ".bin/example-app.sh install svelte",

    "build:package": "cd npm-packages/meteor-vite && meteor npm run build",
    "build:vue": ".bin/example-app.sh build vue",
    "build:vue-ssr": ".bin/example-app.sh build vue-ssr",
    "build:svelte": ".bin/example-app.sh build svelte",

    "link:package": "meteor npm run link:vue && meteor npm run link:svelte",
    "link:vue": ".bin/example-app.sh link vue",
    "link:vue-ssr": ".bin/example-app.sh link vue-ssr",
    "link:svelte": ".bin/example-app.sh link svelte",

    "start:vue": ".bin/example-app.sh start vue",
    "start:vue-ssr": ".bin/example-app.sh start vue-ssr",
    "start:svelte": ".bin/example-app.sh start svelte"
  }
}
